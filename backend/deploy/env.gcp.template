# DeFi Risk Assessment - GCP Backend Configuration
# Copy this file to .env and update the values

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql+psycopg2://defi_user:YOUR_PASSWORD_HERE@localhost:5432/defi_risk_assessment

# ===========================================
# Ollama LLM Configuration (IMPORTANT!)
# ===========================================
# Point this to your LOCAL Ollama instance
# 
# Options:
# 1. Tailscale VPN (Recommended):
#    OLLAMA_BASE_URL=http://100.x.x.x:11434
#
# 2. ngrok (Easy Setup):
#    OLLAMA_BASE_URL=https://abc123.ngrok.io
#
# 3. Direct IP (Port Forward Required):
#    OLLAMA_BASE_URL=http://YOUR_PUBLIC_IP:11434
#
OLLAMA_BASE_URL=http://YOUR_OLLAMA_URL_HERE
OLLAMA_MODEL=mistral
OLLAMA_TEMPERATURE=0.7
OLLAMA_TIMEOUT=120
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ===========================================
# RAG Configuration
# ===========================================
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
VECTOR_STORE_PATH=/home/YOUR_USERNAME/vectorstore

# ===========================================
# MLflow Configuration
# ===========================================
MLFLOW_TRACKING_URI=file:///home/YOUR_USERNAME/mlruns

# ===========================================
# Environment
# ===========================================
ENVIRONMENT=production

# ===========================================
# Security (Optional)
# ===========================================
# API_KEY=your_secret_api_key_here
# CORS_ORIGINS=["https://your-frontend.com"]


